$helv = Helvetica, Arial, sans-serif



*
  margin:0
  padding:0  
  


body
  background: #63B3B8
  font: 22px / 28px $helv


#header
  width:900px
  margin: 50px auto 50px auto;
  color: #3E4243

#header h2
  text-align:center
  margin: 20px 
  font: 70px / 85px $helv

#bingoarea
  width:100%
  background-color:#DC563E
  height:1000px
  display:block
  overflow:hidden;

#bingoboard
  width:900px
  display:block
  margin:50px auto 50px auto;
  background-color:#DC563E

#bingoboard li
  display:block
  width:160px
  margin:5px
  padding:5px
  border-radius: 5px
  height:160px
  font: 22px / 28px $helv
  background-color: #3E4243
  //color: #BEC1C2
  color: white
  float:left
  text-align:center
  display:-ms-flexbox;
  -ms-flex-pack:center;
  -ms-flex-align:center;

  /* Firefox */
  display:-moz-box;
  -moz-box-pack:center;
  -moz-box-align:center;

  /* Safari, Opera, and Chrome */
  display:-webkit-box;
  -webkit-box-pack:center;
  -webkit-box-align:center;

  /* W3C */
  display:box;
  box-pack:center;
  box-align:center;

#footer
  display:block
  width:100%;
  height:24px;
  background-color: #3E4243
  color: white



